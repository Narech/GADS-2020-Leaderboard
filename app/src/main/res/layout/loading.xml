<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">
        <LinearLayout
            android:id="@+id/block_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/double_margin"
            android:paddingBottom="@dimen/default_margin"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/message_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Chargement en cours"
                    android:layout_margin="@dimen/default_margin"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="@dimen/double_margin"
                    android:layout_height="@dimen/double_margin"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_margin" />
        </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>