<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@mipmap/splash_screen_background"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/double_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/custom_toolbar_submit"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/block_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:layout_marginRight="@dimen/default_margin"
                android:hint="Fist Name"
                android:padding="@dimen/default_margin"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:layout_marginLeft="@dimen/default_margin"
                android:hint="Last Name"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/default_margin"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:hint="Email Address"
                android:padding="@dimen/default_margin"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginBottom="@dimen/double_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/project_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:hint="Project on GITHUB (link)"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginBottom="@dimen/double_margin"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/default_margin"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_orange"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"/>

    </LinearLayout>
    </ScrollView>

    </LinearLayout>
</layout>