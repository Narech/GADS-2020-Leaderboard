<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical|center_horizontal"
    android:elevation="50dp"
    android:orientation="vertical"
    android:background="@drawable/background_dialog">
    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/double_margin"
        android:layout_height="@dimen/double_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/default_margin"
        android:src="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/ic_result"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/double_margin"
        />

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirm_message"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Are you sÃ»re"
            android:drawableRight="@drawable/ic_question"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/result_message"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/double_margin"
            android:gravity="center_horizontal" />


        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_orange"
            android:textColor="@color/orange"
            android:layout_gravity="center_horizontal"
            android:text="Yes"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"/>

    </LinearLayout>

</LinearLayout>













