<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sounach.gads2020leaderboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_andela"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_andela"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".view.ui.SubmitActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".view.ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.MainActivity"
            android:theme="@style/NoActionBar"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>